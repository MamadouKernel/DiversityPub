@model IEnumerable<DiversityPub.Models.Activation>
@{
    ViewData["Title"] = "Assignation des Agents";
}

<div class="row">
    <div class="col-12">

        
        <div class="card">
            <div class="card-header">
                <h4 class="mb-0">
                    <i class="fas fa-users"></i> Assignation des Agents aux Activations
                </h4>
            </div>
            <div class="card-body">
                @if (!Model.Any())
                {
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle"></i> Aucune activation non terminée trouvée.
                    </div>
                }
                else
                {
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Activation</th>
                                    <th>Campagne</th>
                                    <th>Lieu</th>
                                    <th>Date</th>
                                    <th>Statut</th>
                                    <th>Agents Assignés</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var activation in Model)
                                {
                                    <tr>
                                        <td>
                                            <strong>@activation.Nom</strong>
                                            @if (!string.IsNullOrEmpty(activation.Description))
                                            {
                                                <br><small class="text-muted">@activation.Description</small>
                                            }
                                        </td>
                                        <td>@activation.Campagne?.Nom</td>
                                        <td>@activation.Lieu?.Nom</td>
                                        <td>@activation.DateActivation.ToString("dd/MM/yyyy")</td>
                                        <td>
                                            <span class="badge bg-@(activation.Statut switch {
                                                DiversityPub.Models.enums.StatutActivation.Planifiee => "warning",
                                                DiversityPub.Models.enums.StatutActivation.EnCours => "success",
                                                DiversityPub.Models.enums.StatutActivation.Suspendue => "warning",
                                                DiversityPub.Models.enums.StatutActivation.Terminee => "info",
                                                _ => "secondary"
                                            })">@activation.Statut</span>
                                        </td>
                                        <td>
                                            @if (activation.AgentsTerrain.Any())
                                            {
                                                <div class="d-flex flex-wrap gap-1">
                                                    @foreach (var agent in activation.AgentsTerrain)
                                                    {
                                                        <span class="badge bg-primary">
                                                            <i class="fas fa-user"></i> @agent.Utilisateur.Prenom @agent.Utilisateur.Nom
                                                        </span>
                                                    }
                                                </div>
                                            }
                                            else
                                            {
                                                <span class="text-muted">
                                                    <i class="fas fa-exclamation-triangle"></i> Aucun agent assigné
                                                </span>
                                            }
                                        </td>
                                        <td>
                                            <a href="@Url.Action("Edit", "Assignation", new { id = activation.Id })" 
                                               class="btn btn-sm btn-primary">
                                                <i class="fas fa-edit"></i> Assigner
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<style>
    .badge {
        font-size: 0.75em;
    }
    .table td {
        vertical-align: middle;
    }
</style> 