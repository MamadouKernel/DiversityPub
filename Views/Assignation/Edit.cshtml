@model DiversityPub.Models.Activation
@{
    ViewData["Title"] = "Assigner des Agents";
}

<div class="row">
    <div class="col-12">

        
        <div class="card">
            <div class="card-header">
                <h4 class="mb-0">
                    <i class="fas fa-users"></i> Assigner des Agents à l'Activation
                </h4>
            </div>
            <div class="card-body">
                <div class="row mb-4">
                    <div class="col-md-6">
                        <h5>Détails de l'Activation</h5>
                        <table class="table table-borderless">
                            <tr>
                                <td><strong>Nom :</strong></td>
                                <td>@Model.Nom</td>
                            </tr>
                            <tr>
                                <td><strong>Campagne :</strong></td>
                                <td>@Model.Campagne?.Nom</td>
                            </tr>
                            <tr>
                                <td><strong>Lieu :</strong></td>
                                <td>@Model.Lieu?.Nom</td>
                            </tr>
                            <tr>
                                <td><strong>Date :</strong></td>
                                <td>@Model.DateActivation.ToString("dd/MM/yyyy")</td>
                            </tr>
                            <tr>
                                <td><strong>Statut :</strong></td>
                                <td>
                                    <span class="badge bg-@(Model.Statut switch {
                                        DiversityPub.Models.enums.StatutActivation.Planifiee => "warning",
                                        DiversityPub.Models.enums.StatutActivation.EnCours => "success",
                                        DiversityPub.Models.enums.StatutActivation.Suspendue => "warning",
                                        DiversityPub.Models.enums.StatutActivation.Terminee => "info",
                                        _ => "secondary"
                                    })">@Model.Statut</span>
                                </td>
                            </tr>
                        </table>
                    </div>
                    <div class="col-md-6">
                        <h5>Agents Actuellement Assignés</h5>
                        @if (Model.AgentsTerrain.Any())
                        {
                            <div class="d-flex flex-wrap gap-2">
                                @foreach (var agent in Model.AgentsTerrain)
                                {
                                    <span class="badge bg-primary fs-6">
                                        <i class="fas fa-user"></i> @agent.Utilisateur.Prenom @agent.Utilisateur.Nom
                                    </span>
                                }
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-warning">
                                <i class="fas fa-exclamation-triangle"></i> Aucun agent assigné à cette activation.
                            </div>
                        }
                    </div>
                </div>

                <form asp-action="Edit" method="post">
                    <input type="hidden" name="id" value="@Model.Id" />
                    
                    <div class="mb-3">
                        <label class="form-label">
                            <i class="fas fa-users"></i> Agents Terrain Disponibles
                        </label>
                        <div class="row">
                            @if (ViewBag.AgentsTerrain != null && ((IEnumerable<DiversityPub.Models.AgentTerrain>)ViewBag.AgentsTerrain).Any())
                            {
                                @foreach (var agent in ViewBag.AgentsTerrain)
                                {
                                    var isSelected = Model.AgentsTerrain?.Any(at => at.Id == agent.Id) ?? false;
                                    <div class="col-md-4 mb-2">
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" name="agentIds" 
                                                   value="@agent.Id" id="agent_@agent.Id" @(isSelected ? "checked" : "") />
                                            <label class="form-check-label" for="agent_@agent.Id">
                                                <i class="fas fa-user"></i> @agent.Utilisateur.Prenom @agent.Utilisateur.Nom
                                            </label>
                                        </div>
                                    </div>
                                }
                            }
                            else
                            {
                                <div class="col-12">
                                    <div class="alert alert-info">
                                        <i class="fas fa-info-circle"></i> Aucun agent terrain disponible pour le moment.
                                    </div>
                                </div>
                            }
                        </div>
                        <small class="text-muted">
                            <i class="fas fa-info-circle"></i> 
                            <strong>Note :</strong> Sélectionnez les agents qui participeront à cette activation.
                            @if (Model.Statut == DiversityPub.Models.enums.StatutActivation.EnCours)
                            {
                                <span class="text-danger">Au moins un agent doit être assigné pour une activation en cours.</span>
                            }
                        </small>
                    </div>

                    <div class="d-flex justify-content-between">
                        <a href="@Url.Action("Index", "Assignation")" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Retour
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save"></i> Enregistrer l'Assignation
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    .badge {
        font-size: 0.9em;
    }
    .form-check-label {
        font-weight: 500;
    }
</style> 