    }
    
    .btn-cancel:hover {
        background: #6c757d;
        color: white;
        transform: translateY(-1px);
    }
    
    .btn-submit {
        background: #17a2b8;
        border: none;
        color: white;
        padding: 0.75rem 1.5rem;
        border-radius: 8px;
        font-weight: 600;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }
    
    .btn-submit:hover {
        background: #138496;
        transform: translateY(-1px);
        box-shadow: 0 4px 12px rgba(23, 162, 184, 0.3);
