@model DiversityPub.Models.Feedback
@{
    ViewData["Title"] = "Modifier le Feedback";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h4 class="mb-0">
                    <i class="fas fa-edit"></i> Modifier le Feedback
                </h4>
            </div>
            <div class="card-body">
                <form asp-action="Edit" method="post">
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="CampagneId" />
                    <input type="hidden" asp-for="DateFeedback" />
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Note" class="form-label">
                                    <i class="fas fa-star"></i> Note (1-5)
                                </label>
                                <select asp-for="Note" class="form-select" required>
                                    <option value="1">1 - Très insatisfait</option>
                                    <option value="2">2 - Insatisfait</option>
                                    <option value="3">3 - Neutre</option>
                                    <option value="4">4 - Satisfait</option>
                                    <option value="5">5 - Très satisfait</option>
                                </select>
                                <span asp-validation-for="Note" class="text-danger"></span>
                                <small class="form-text text-muted">Sélectionnez la note attribuée par le client</small>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">
                                    <i class="fas fa-bullhorn"></i> Campagne
                                </label>
                                <input type="text" class="form-control" value="@Model.Campagne?.Nom" readonly />
                                <small class="form-text text-muted">Campagne associée au feedback</small>
                            </div>
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Commentaire" class="form-label">
                            <i class="fas fa-comment"></i> Commentaire
                        </label>
                        <textarea asp-for="Commentaire" class="form-control" rows="5" 
                                  placeholder="Commentaire du client sur la campagne..."></textarea>
                        <span asp-validation-for="Commentaire" class="text-danger"></span>
                        <small class="form-text text-muted">Commentaire détaillé du client</small>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">
                                    <i class="fas fa-building"></i> Client
                                </label>
                                <input type="text" class="form-control" value="@Model.Campagne?.Client?.RaisonSociale" readonly />
                                <small class="form-text text-muted">Client qui a laissé ce feedback</small>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">
                                    <i class="fas fa-calendar"></i> Date du feedback
                                </label>
                                <input type="text" class="form-control" value="@Model.DateFeedback.ToString("dd/MM/yyyy à HH:mm")" readonly />
                                <small class="form-text text-muted">Date de création du feedback</small>
                            </div>
                        </div>
                    </div>
                    
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle"></i>
                        <strong>Note :</strong> Vous pouvez modifier la note et le commentaire du feedback. 
                        Les informations de la campagne et du client ne peuvent pas être modifiées.
                    </div>
                    
                    <div class="d-flex justify-content-between">
                        <a href="@Url.Action("Index", "Feedback")" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Retour à la liste
                        </a>
                        <div>
                            <a href="@Url.Action("Details", "Feedback", new { id = Model.Id })" class="btn btn-info">
                                <i class="fas fa-eye"></i> Voir les détails
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Enregistrer les modifications
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Validation personnalisée pour la note
            const noteSelect = document.getElementById('Note');
            noteSelect.addEventListener('change', function() {
                const note = parseInt(this.value);
                if (note < 1 || note > 5) {
                    this.setCustomValidity('La note doit être comprise entre 1 et 5');
                } else {
                    this.setCustomValidity('');
                }
            });
        });
    </script>
}

<style>
    .card-header {
        background: linear-gradient(135deg, #A32D18, #59311F);
        color: white;
    }
    
    .form-control:read-only {
        background-color: #f8f9fa;
        border-color: #dee2e6;
    }
    
    .btn-primary {
        background-color: #A32D18;
        border-color: #A32D18;
    }
    
    .btn-primary:hover {
        background-color: #59311F;
        border-color: #59311F;
    }
</style> 