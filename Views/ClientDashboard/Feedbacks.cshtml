@model IEnumerable<DiversityPub.Models.Feedback>
@{
    ViewData["Title"] = "Mes Feedbacks";
}

<div class="row">
    <div class="col-12">
        @if (TempData["Info"] != null)
        {
            <div class="alert alert-info">
                <i class="fas fa-info-circle"></i> @TempData["Info"]
            </div>
        }
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success">
                <i class="fas fa-check-circle"></i> @TempData["Success"]
            </div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger">
                <i class="fas fa-times-circle"></i> @TempData["Error"]
            </div>
        }
        
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h4 class="mb-0">
                    <i class="fas fa-comments"></i> Mes Feedbacks
                </h4>
                <a href="@Url.Action("CreateFeedback", "ClientDashboard")" class="btn btn-success">
                    <i class="fas fa-plus"></i> Nouveau Feedback
                </a>
            </div>
            <div class="card-body">
                @if (Model.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>
                                        <i class="fas fa-bullhorn"></i> Campagne
                                    </th>
                                    <th>
                                        <i class="fas fa-star"></i> Note
                                    </th>
                                    <th>
                                        <i class="fas fa-comment"></i> Commentaire
                                    </th>
                                    <th>
                                        <i class="fas fa-calendar"></i> Date
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            <span class="badge bg-info">@item.Campagne?.Nom</span>
                                            <br>
                                            <small class="text-muted">
                                                @item.Campagne?.DateDebut.ToString("dd/MM/yyyy") - @item.Campagne?.DateFin.ToString("dd/MM/yyyy")
                                            </small>
                                        </td>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                @for (int i = 1; i <= 5; i++)
                                                {
                                                    if (i <= item.Note)
                                                    {
                                                        <i class="fas fa-star text-warning"></i>
                                                    }
                                                    else
                                                    {
                                                        <i class="far fa-star text-muted"></i>
                                                    }
                                                }
                                                <span class="ms-2 badge bg-primary">@item.Note/5</span>
                                            </div>
                                        </td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(item.Commentaire))
                                            {
                                                <div class="text-truncate d-inline-block" style="max-width: 300px;" title="@item.Commentaire">
                                                    @item.Commentaire
                                                </div>
                                            }
                                            else
                                            {
                                                <span class="text-muted">Aucun commentaire</span>
                                            }
                                        </td>
                                        <td>
                                            <small class="text-muted">@item.DateFeedback.ToString("dd/MM/yyyy à HH:mm")</small>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center py-5">
                        <i class="fas fa-comments fa-3x text-muted mb-3"></i>
                        <h5 class="text-muted">Aucun feedback trouvé</h5>
                        <p class="text-muted">Vous n'avez pas encore laissé de feedback sur vos campagnes.</p>
                        <a href="@Url.Action("CreateFeedback", "ClientDashboard")" class="btn btn-primary">
                            <i class="fas fa-plus"></i> Laisser un feedback
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<style>
    .table th {
        font-weight: 600;
        background-color: #f8f9fa;
    }
    
    .text-truncate {
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
    }
    
    .badge {
        font-size: 0.8rem;
    }
</style> 