@model IEnumerable<DiversityPub.Models.Activation>
@{
    ViewData["Title"] = "Mes Activations";
}

<div class="row">
    <div class="col-12">
        @if (TempData["Info"] != null)
        {
            <div class="alert alert-info">
                <i class="fas fa-info-circle"></i> @TempData["Info"]
            </div>
        }
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success">
                <i class="fas fa-check-circle"></i> @TempData["Success"]
            </div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger">
                <i class="fas fa-times-circle"></i> @TempData["Error"]
            </div>
        }
        
        <div class="card">
            <div class="card-header">
                <h4 class="mb-0">
                    <i class="fas fa-map-marker-alt"></i> Mes Activations
                </h4>
            </div>
            <div class="card-body">
                @if (Model.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>
                                        <i class="fas fa-map-marker-alt"></i> Nom
                                    </th>
                                    <th>
                                        <i class="fas fa-bullhorn"></i> Campagne
                                    </th>
                                    <th>
                                        <i class="fas fa-calendar"></i> Date
                                    </th>
                                    <th>
                                        <i class="fas fa-clock"></i> Horaires
                                    </th>
                                    <th>
                                        <i class="fas fa-map-pin"></i> Lieu
                                    </th>
                                    <th>
                                        <i class="fas fa-users"></i> Agents
                                    </th>
                                    <th>
                                        <i class="fas fa-tasks"></i> Statut
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            <strong>@item.Nom</strong>
                                            @if (!string.IsNullOrEmpty(item.Description))
                                            {
                                                <br><small class="text-muted">@item.Description</small>
                                            }
                                        </td>
                                        <td>
                                            <span class="badge bg-info">@item.Campagne?.Nom</span>
                                        </td>
                                        <td>
                                            <small class="text-muted">@item.DateActivation.ToString("dd/MM/yyyy")</small>
                                        </td>
                                        <td>
                                            <small>
                                                @item.HeureDebut.ToString("HH:mm") - @item.HeureFin.ToString("HH:mm")
                                            </small>
                                        </td>
                                        <td>
                                            <span class="badge bg-secondary">@item.Lieu?.Nom</span>
                                        </td>
                                        <td>
                                            @if (item.AgentsTerrain?.Any() == true)
                                            {
                                                <span class="badge bg-success">@item.AgentsTerrain.Count agent(s)</span>
                                                <br>
                                                <small class="text-muted">
                                                    @string.Join(", ", item.AgentsTerrain.Select(at => $"{at.Utilisateur.Prenom} {at.Utilisateur.Nom}"))
                                                </small>
                                            }
                                            else
                                            {
                                                <span class="badge bg-warning">Aucun agent</span>
                                            }
                                        </td>
                                        <td>
                                            <span class="badge bg-@(item.Statut switch {
                                                DiversityPub.Models.enums.StatutActivation.Planifiee => "warning",
                                                DiversityPub.Models.enums.StatutActivation.EnCours => "success",
                                                DiversityPub.Models.enums.StatutActivation.Suspendue => "warning",
                                                DiversityPub.Models.enums.StatutActivation.Terminee => "info",
                                                _ => "secondary"
                                            })">@item.Statut</span>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center py-5">
                        <i class="fas fa-map-marker-alt fa-3x text-muted mb-3"></i>
                        <h5 class="text-muted">Aucune activation trouvée</h5>
                        <p class="text-muted">Vous n'avez pas encore d'activations associées à vos campagnes.</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<style>
    .table th {
        font-weight: 600;
        background-color: #f8f9fa;
    }
    
    .badge {
        font-size: 0.8rem;
    }
</style> 