@model dynamic
@{
    ViewData["Title"] = "Erreur";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h4 class="mb-0">
                    <i class="fas fa-exclamation-triangle"></i> Erreur de Configuration
                </h4>
            </div>
            <div class="card-body text-center">
                <div class="py-5">
                    <i class="fas fa-user-times fa-3x text-danger mb-3"></i>
                    <h5 class="text-danger">Compte Client Non Configuré</h5>
                    <p class="text-muted">
                        Votre compte utilisateur n'est pas correctement associé à un client.
                    </p>
                    <p class="text-muted">
                        Veuillez contacter l'administrateur pour résoudre ce problème.
                    </p>
                    <hr class="my-4">
                    <form asp-controller="Auth" asp-action="Logout" method="post">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-sign-out-alt"></i> Se déconnecter
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card-header {
        background: linear-gradient(135deg, #A32D18, #59311F);
        color: white;
    }
</style> 